<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/flower"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:textColor="#000000"
            android:textSize="15dp"
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=" "
            app:layout_constraintLeft_toRightOf="@id/flower"
            app:layout_constraintTop_toTopOf="parent">


        </TextView>

        <Button

            android:textSize="15dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_shape"
            android:text="10$discount"
        app:layout_constraintBaseline_toBaselineOf="@id/txtName"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:id="@+id/discount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txtName">
        </Button>

        <TextView
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/textPr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price : "
            app:layout_constraintLeft_toLeftOf="@id/txtName"
            app:layout_constraintTop_toBottomOf="@id/txtName">

        </TextView>

        <TextView
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jjjj"
            app:layout_constraintLeft_toRightOf="@id/textPr"
            app:layout_constraintTop_toBottomOf="@id/txtName">

        </TextView>

        <ImageButton
            android:id="@+id/btnM"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_minus"
            android:background="@drawable/pmbtn_shape"
            app:layout_constraintLeft_toRightOf="@id/flower"
            app:layout_constraintTop_toBottomOf="@id/textPr" />

        <TextView
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/txtkg"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="1kg"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/btnM"
            app:layout_constraintTop_toBottomOf="@id/txtPrice" />

        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_plus"
           android:background="@drawable/pmbtn_shape"
            app:layout_constraintLeft_toRightOf="@id/txtkg"
            app:layout_constraintTop_toBottomOf="@id/txtPrice" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
